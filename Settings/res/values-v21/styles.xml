<resources>

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:windowNoTitle">true</item>  -->
        <item name="android:colorPrimaryDark">#f0f0f0</item>
    </style>
    
    
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
          <item name="android:windowNoTitle">true</item> 
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    
	
     <style name="MyActionBar2" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/color_statusbar</item>
       
        <item name="android:actionBarSize">40.0dip</item>
    </style>

</resources>
